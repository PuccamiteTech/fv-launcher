{
  "name": "flash-player",
  "version": "1.0.0",
  "description": "Cross-platform Flash player using Pepper Flash",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "start:mac": "arch -x86_64 electron .",
    "build": "electron-builder",
    "build:mac": "electron-builder --mac --x64 --dir && codesign --force --deep --sign - 'dist/mac/Flash Player.app' && create-dmg --volname 'Flash Player' --window-pos 200 120 --window-size 600 400 --icon-size 100 --icon 'Flash Player.app' 150 185 --app-drop-link 450 185 'dist/Flash Player.dmg' 'dist/mac/Flash Player.app'",
    "build:win": "electron-builder --win",
    "build:linux": "electron-builder --linux"
  },
  "build": {
    "appId": "com.flash.player",
    "productName": "Flash Player",
    "icon": "logo.png",
    "files": [
      "main.js",
      "preload.js",
      "index.html",
      "plugins/**/*"
    ],
    "extraResources": [
      {
        "from": "plugins",
        "to": "plugins"
      }
    ],
    "mac": {
      "category": "public.app-category.games",
      "icon": "logo.png",
      "identity": null,
      "hardenedRuntime": false,
      "gatekeeperAssess": false,
      "target": [
        {
          "target": "dmg",
          "arch": "x64"
        }
      ]
    },
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": "x64"
        }
      ],
      "icon": "logo.ico"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": "x64"
        }
      ],
      "icon": "logo.png"
    }
  },
  "devDependencies": {
    "electron": "11.5.0",
    "electron-builder": "^22.14.13"
  }
}
